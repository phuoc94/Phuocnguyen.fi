.contact {
  form {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 1rem;
    max-width: calc(768px - 1.0875rem * 2);
    margin: 0 auto;
    label {
      display: grid;
      input,
      textarea {
        width: 100%;
        box-sizing: border-box;
        -webkit-appearance: none;
        color: rgb(130, 130, 130);
        transition: all 0.2s ease 0s;
        border-width: 1px;
        border-style: solid;
        border-radius: 4px;
        padding: 0.6rem 1rem;
      }
    }

    button {
      background-image: linear-gradient(
        10deg,
        rgb(0, 115, 255) 0%,
        rgb(0, 200, 255) 100%
      );
      cursor: pointer;
      color: rgb(255, 255, 255);
      width: 150px;
      height: 50px;
      box-shadow: rgb(110, 150, 255) 0px 4px 0px -4px;
      -webkit-appearance: none;
      user-select: none;
      border-radius: 50px;
      margin: 0px auto;
      border-style: none;
    }
  }
}
